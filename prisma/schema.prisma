generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @default(autoincrement())
  name          String?
  email         String?   @unique
  walletAddress String    @unique
}

model Artwork {
  id          Int      @id @default(autoincrement())
  imageHash   String
  artist      String
  isDuplicate Boolean
  consensus   Boolean
  title       String
  metadata    Json
  createdAt   DateTime @default(now())
}
model PendingArtwork {
  id             String   @id @default(uuid())
  title          String
  artist         String
  dateSubmitted  DateTime
  status         String
  medium         String
  images         String[] // Array of image URLs
  description    String
  additionalInfo String
}
